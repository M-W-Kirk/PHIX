.container
  div(style='height: 100px') &nbsp;
  .row
    .col-md-6.col-md-offset-3
      .well
        form(novalidate,name='signup',ng-submit='create()')
          // email
          .form-group(ng-class="{'has-error': signup.email.$invalid, 'has-success': !signup.email.$invalid}")
            input.form-control(type='email',placeholder='Email',name='email',ng-model='user.email',required)
            span.input-icon.fui-mail
            span.help-block(ng-show='signup.email.$error.required') is required
            span.help-block(ng-show='signup.email.$error.email') should be an email
          // username
          .form-group(ng-class="{'has-error': signup.username.$invalid, 'has-success': !signup.username.$invalid}")
            input.form-control(type='text',placeholder='Username',name='username',ng-model='user.username',ng-minlength='5',required)
            span.input-icon.fui-user
            span.help-block(ng-show='signup.username.$error.required') is required
            span.help-block(ng-show='signup.username.$error.minlength') should be at least 5 characters long
          // password
          .form-group(ng-class="{'has-error': signup.password.$invalid, 'has-success': !signup.password.$invalid}")
            input.form-control(type='password',placeholder='Password',name='password',ng-model='user.password',required)
            span.input-icon.fui-lock
            span.help-block(ng-show='signup.password.$error.required') is required
          // confirm password
          .form-group(ng-class="{'has-error': signup.confirmPassword.$invalid, 'has-success': !signup.confirmPassword.$invalid}")
            input.form-control(type='password',placeholder='Confirm Password',name='confirmPassword',ng-model='user.confirmPassword')
            span.input-icon.fui-lock
            span.help-block(ng-show='signup.confirmPassword.$error.equals') does not match
          input.btn.btn-primary.btn-lg.btn-block(type='submit',value='Signup' ng-disabled='signup.email.$error.required || signup.email.$error.email || signup.username.$error.required || signup.username.$error.minlength || signup.password.$error.required || angular.equals(user.password, user.confirmPassword) ')
        .alert.alert-error.alert-dismissable.mtl(name='server-alert' ng-show='signup.serverError') {{signup.serverError}}
