.row(ng-hide='data.allergies')
  .lead You have no allergies in your records at this time.

.row(style='padding-top: 20px')
  .col-md-4(ng-repeat="all in data.allergies| filter: activefilter")
    .well
      strong {{all.reaction_type.name}} : 
      br
      strong {{all.allergen.name}}
      br
      small ({{all.name}})
      br
      small Status: {{all.status}}
      br
      small Severity: {{all.severity}}
      br
      small Reaction: {{all.reaction.name}}
      br 
      br 
      small {{all.date_range.start| date:"MMMM dd, yyyy"}} - {{all.date_range.end| date:"MMMM dd, yyyy"}} 
      p(ng-show="!all.approved")
        span.label.label-success(ng-click="add('allergies', '{{all._id}}')") Add to master record
        <br/>
        span.label.label-danger(ng-click="remove('allergies', '{{all._id}}')") Remove from master record
