.row(ng-hide='data.immunizations')
  .lead You have no immunizations in your records at this time.

.row(style='padding-top: 20px')
  .col-md-4(ng-repeat="imm in data.immunizations| filter: activefilter", style="min-height:250px")
    .well
      strong {{imm.product.name}} 
      br
      small ({{imm.product.translation.name}})
      br
      small {{imm.route.name}} 
      br
      small {{imm.instructions}} 
      br 
      br
      small {{imm.date| date:"MMMM dd, yyyy"}} 
      p(ng-show="!imm.approved")
        span.label.label-success(ng-click="add('immunizations', '{{imm._id}}')") Add to master record 
        <br/>
        span.label.label-danger(ng-click="remove('immunizations', '{{imm._id}}')") Remove from master record
