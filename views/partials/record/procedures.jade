.row(ng-hide='data.procedures')
  .lead You have no procedures in your records at this time.

.row(style='padding-top: 20px')
  .col-md-4(ng-repeat="procedure in data.procedures| filter: activefilter")
    .well
      strong {{procedure.name}}
      br
      small ({{procedure.device.name}})
      br 
      small {{ procedure.performer.street[0] }}
      br
      small {{ procedure.performer.city}} , {{ procedure.performer.state }} {{procedure.performer.zip}}
      br
      small {{procedure.date| date:"MMMM dd, yyyy"}}
      p(ng-show="!procedure.approved")
        span.label.label-success(ng-click="add('procedure', '{{procedure._id}}')") Add to master record 
        <br/>
        span.label.label-danger(ng-click="remove('procedure', '{{procedure._id}}')") Remove from master record

