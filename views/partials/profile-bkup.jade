div(ng-include="'partials/header'")

.container
  .row
    .col-md-12
      h2 Profile

      form(novalidate)
        // email
        .form-group
          label.control-label(for='inputFirstname') Email
          input.form-control(type='email',placeholder='Email',name='email',ng-model='profile.email',required)
          span.help-block(ng-show='profile.email.$error.required') is required
          span.help-block(ng-show='profile.email.$error.email') should be an email
        // username
        .form-group
          label.control-label(for='inputFirstname') Username
          input.form-control(type='text',placeholder='Username',name='username',ng-model='profile.username',ng-minlength='5',required)
          span.help-block(ng-show='profile.username.$error.required') is required
          span.help-block(ng-show='profile.username.$error.minlength') should be at least 5 characters long
        button.btn.btn-success(type='submit',ng-click='enroll()') Update Username
        // password
        .form-group
          label.control-label(for='inputFirstname') Password
          input.form-control(type='password',placeholder='Password',name='password',ng-model='profile.password',required)
          span.help-block(ng-show='profile.password.$error.required') is required
        // confirm password
        .form-group
          label.control-label(for='inputFirstname') Confirm Password
          input.form-control(type='password',placeholder='Confirm Password',name='confirmPassword',ng-model='profile.confirmPassword',equals='{{profile.password}}')
          span.help-block(ng-show='profile.confirmPassword.$error.equals') does not match
        button.btn.btn-success(type='submit',ng-click='enroll()') Update Password


      form(role='form',name='profile',novalidate)

        .form-group
          label.control-label(for='inputFirstname') First name
          input#inputFirstname.form-control(type='text', name="firstname", placeholder='Jane', required, ng-model='data.firstname')
          span.help-block(ng-show='profile.firstname.$error.required') First name is required

        .form-group
          label.control-label(for='inputMiddlename') Middle name
          input#inputMiddlename.form-control(type='text', name="middlename", placeholder='Q', ng-model='data.middlename')
        .form-group
          label.control-label(for='inputLastname') Last name
          input#inputLastname.form-control(type='text', name="lastname", placeholder='Public', required, ng-model='data.lastname')
          span.help-block(ng-show='profile.firstname.$error.required') First name is required

        </br>

        .form-group
          label.control-label(for='inputBirthdate') Birthdate
          input#inputBirthdate.form-control(type='text', name="birthdate", placeholder='mm/dd/yyyy',ng-pattern='dateformat', required, ng-model='data.birthdate')

          span.help-block(ng-show='profile.birthdate.$error.required') Birthdate is required
          span.help-block(ng-show='profile.birthdate.$error.pattern && profile.birthdate.$dirty') Valid date format is mm/dd/yyyy

        .form-group
          label.control-label(for='inputSSN') Social security number
          input#inputSSN.form-control(type='text', name="ssn", placeholder='nnn-nn-nnnn', ng-pattern='ssnformat', required, ng-model='data.ssn')
          span.help-block(ng-show='profile.ssn.$error.required') SSN is required
          span.help-block(ng-show='profile.ssn.$error.pattern && profile.ssn.$dirty') Valid SSN format is nnn-nn-nnnn

        </br>

        .form-group
          label.control-label(for='gender') Gender
          .radio
            label
                bt-radio#inputGender1(name='gender', value='female', required, ng-model='data.gender')
                | Female
          .radio
            label
                bt-radio#inputGender2(name='gender', value='male', required, ng-model='data.gender')
                | Male
          .radio
            label
                bt-radio#inputGender3(name='gender', value='none', required, ng-model='data.gender')
                | Prefer not to disclose
          span.help-block(ng-show='profile.gender.$error.required') Gender is required





        </br>


        .form-group
          label.control-label(for='inputAddress') Address
          input#inputAddress.form-control(type='text', name="address", placeholder='1600 Penn ave', required, ng-model='data.address')
          span.help-block(ng-show='profile.address.$error.required') Address is required

        .form-group
          label.control-label(for='inputAddress2') Address 2
          input#inputAddress2.form-control(type='text', name="address2", placeholder='', ng-model='data.address2')

        .form-group
          label.control-label(for='inputCity') City
          input#inputCity.form-control(type='text', name="city", placeholder='Townville', required, ng-model='data.city')
          span.help-block(ng-show='profile.city.$error.required') City is required

        .form-group
          label.control-label(for='inputState') State
          select#inputState.form-control(type='text', name="state", placeholder='ST', required, ng-model='data.state')
            option(ng-repeat='state in states') {{state}}
          span.help-block(ng-show='profile.state.$error.required') State is required

        .form-group
          label.control-label(for='inputZipcode') Zipcode
          input#inputZipcode.form-control(type='text', name="zipcode", placeholder='12345', ng-pattern='zipcodeformat', required, ng-model='data.zipcode')
          span.help-block(ng-show='profile.zipcode.$error.required') Zipcode is required
          span.help-block(ng-show='!profile.zipcode.$valid && profile.zipcode.$dirty && !profile.zipcode.$error.required') Valid zipcode format is NNNNN

        </br>

        .form-group
          label.control-label(for='inputPhone') Phone number
          input#inputPhone.form-control(type='text', name="phone", placeholder='xxxxxxxxxx', ng-pattern='phoneformat', required, ng-model='data.phone')
          span.help-block(ng-show='profile.phone.$error.required') Phone number is required
          span.help-block(ng-show='!profile.phone.$valid && profile.phone.$dirty && !profile.phone.$error.required') Valid phone number format is xxxxxxxxxx

        .form-group
          label.control-label(for='inputPhonetype') Phone type
          .radio
            label
                bt-radio#inputPhonetype(name='phonetype', required, ng-model='data.phonetype', value='mobile')
                | Mobile (Voice calls and SMS/text messages)
          .radio
            label
                bt-radio#inputPhonetype(name='phonetype', required, ng-model='data.phonetype', value='landline')
                | Landline (Voice calls only)
          span.help-block(ng-show='profile.phonetype.$error.required') Phone type is required

        </br>

        .form-group
          button.btn.btn-success(type='submit',ng-click='enroll()') Update



