.row(ng-hide='recordData.medications')
  .lead No medication entries in this record.

.row(style='padding-top: 20px')
  .col-md-12(ng-repeat="med in recordData.medications| filter: activefilter")
    .well
      strong {{med.product.name}} 
      br
      small ({{med.product.translation.name}})
      br
      small Instructions: {{med.administration.name}}
      br 
      br
      small {{med.date_range.start| date:"MMMM dd, yyyy"}} - {{med.date_range.end| date:"MMMM dd, yyyy"}}