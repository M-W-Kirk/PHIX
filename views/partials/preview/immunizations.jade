.row(ng-hide='recordData.immunizations')
  .lead No immunization entries in this record.

.row(style='padding-top: 20px')
  .col-md-12(ng-repeat="imm in recordData.immunizations| filter: activefilter", style="min-height:250px")
    .well
      strong {{imm.product.name}} 
      br
      small ({{imm.product.translation.name}})
      br
      small {{imm.route.name}} 
      br
      small {{imm.instructions}} 
      br 
      br
      small {{imm.date| date:"MMMM dd, yyyy"}} 