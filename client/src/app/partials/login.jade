.container
  div(style='height: 100px') &nbsp;
  .row
    .col-md-6.col-md-offset-3
      .well
        form(novalidate,name='login',ng-submit='check()')
          // username
          .form-group(ng-class="{'has-error': login.username.$invalid, 'has-success': !login.username.$invalid}")
            input.form-control(type='text',placeholder='Username',name='username',ng-model='user.username',required)
            span.input-icon.fui-user
            span.help-block(ng-show='login.username.$error.required') is required
          // password
          .form-group(ng-class="{'has-error': login.password.$invalid, 'has-success': !login.password.$invalid}")
            input.form-control(type='password',placeholder='Password',name='password',ng-model='user.password',required)
            span.input-icon.fui-lock
            span.help-block(ng-show='login.password.$error.required') is required
          input.btn.btn-primary.btn-lg.btn-block(type='submit',value='Login')
          .alert.alert-error.alert-dismissable.mtl(name='server-alert' ng-show='login.serverError') {{login.serverError}}
