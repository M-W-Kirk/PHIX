.row(ng-hide='recordData.results')
  .lead No lab entries in this record.

.row(style='padding-top: 20px')
  .col-md-12( ng-repeat="lab in recordData.results| filter: activefilter")
    .well
      strong {{lab.name}}
      br
      .box(ng-repeat="result in lab.results")
          small {{result.name}}: &nbsp;
            strong {{result.value}} &nbsp;
              small {{result.unit}}
      br 
      small {{ lab.results[0].date|date:"MMMM dd, yyyy"}}